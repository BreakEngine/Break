# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Break_Graphics_config = debug
  Break_Physics_config = debug
  Break_Infrastructure_config = debug
  Break_config = debug
endif
ifeq ($(config),release)
  Break_Graphics_config = release
  Break_Physics_config = release
  Break_Infrastructure_config = release
  Break_config = release
endif

PROJECTS := Break_Graphics Break_Physics Break_Infrastructure Break

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Break_Graphics: Break_Infrastructure
ifneq (,$(Break_Graphics_config))
	@echo "==== Building Break_Graphics ($(Break_Graphics_config)) ===="
	@${MAKE} --no-print-directory -C ../Graphics -f Makefile config=$(Break_Graphics_config)
endif

Break_Physics: Break_Infrastructure
ifneq (,$(Break_Physics_config))
	@echo "==== Building Break_Physics ($(Break_Physics_config)) ===="
	@${MAKE} --no-print-directory -C ../Physics -f Makefile config=$(Break_Physics_config)
endif

Break_Infrastructure:
ifneq (,$(Break_Infrastructure_config))
	@echo "==== Building Break_Infrastructure ($(Break_Infrastructure_config)) ===="
	@${MAKE} --no-print-directory -C ../Infrastructure -f Makefile config=$(Break_Infrastructure_config)
endif

Break: Break_Infrastructure Break_Graphics Break_Physics
ifneq (,$(Break_config))
	@echo "==== Building Break ($(Break_config)) ===="
	@${MAKE} --no-print-directory -C . -f Break.make config=$(Break_config)
endif

clean:
	@${MAKE} --no-print-directory -C ../Graphics -f Makefile clean
	@${MAKE} --no-print-directory -C ../Physics -f Makefile clean
	@${MAKE} --no-print-directory -C ../Infrastructure -f Makefile clean
	@${MAKE} --no-print-directory -C . -f Break.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Break_Graphics"
	@echo "   Break_Physics"
	@echo "   Break_Infrastructure"
	@echo "   Break"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"